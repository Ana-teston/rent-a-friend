<div class="container">
<%= simple_form_for @friend do |f| %>
      <div class="row">
      <div class="col">
      <%= f.input :first_name %>
      </div>
      <div class="col">
    <%= f.input :last_name %>
    </div>
    </div>
    <%= f.input :age %>
    <%= f.input :location %>
    <%= f.input :bio %>
    <%= f.input :interests %>
    <div class="row">
      <div class="col">
        <%= f.input :start_date, as: :string, input_html: { data: { flatpickr_target: "startTime" } } %>
      </div>
      <div class="col">
        <%= f.input :end_date, as: :string, input_html: { data: { flatpickr_target: "endTime" } } %>
      </div>
    </div>
    <%= f.input :activity %>
    <%= f.input :price %>
    <%= f.input :image %>
    <%= f.button :submit, 'Create Friend', class: 'btn btn-primary mt-3' %>
  <% end %>
</div>
