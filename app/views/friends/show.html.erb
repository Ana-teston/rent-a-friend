<div class="container">
    <div class=" mt-3">
          <div class="row gutters-sm">
            <div class="col-md-6">
              <div class="">
                <div class="card-body">
                  <div class="d-flex flex-column align-items-center text-center">
                  <div class="round-max-images">
                    <%= cl_image_tag @friend.image.key, width: 250 %>
                  </div>
                    <div class="mt-3">
                      <h4><%= @friend.first_name%> <%= @friend.last_name%></h4>
                      <p class="text-secondary mb-1"><%= @friend.bio%></p>
                      <p class="text-muted font-size-sm"><%= @friend.location%></p>
                      <button class="btn btn-primary pe-none">$<%= @friend.price%></button>
                    </div>
                  </div>
                </div>
              </div>
              <div class=" mt-3 mb-3">
                <ul class="list-group list-group-flush">
                  <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                    <h6 class="mb-0">Age</h6>
                    <span class="text-secondary"><%= @friend.age%> Years old</span>
                  </li>
                  <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                    <h6 class="mb-0">Interests</h6>
                    <span class="text-secondary"><%= @friend.interests%></span>
                  </li>
                  <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                    <h6 class="mb-0">Activity</h6>
                    <span class="text-secondary"><%= @friend.activity%></span>
                  </li>
                </ul>
              </div>
            </div>
            <div class="col mb-3">

              <%= render partial: "bookings/form", locals: { booking: @booking } %>

            </div>
          </div>


  <div class="container">

      <% if policy(@friend).edit? %>
        <%= link_to "Edit", edit_friend_path(@friend), class: "btn btn-primary" %>
      <% end %>
      <% if policy(@friend).destroy? %>
        <%= link_to "Delete", friend_path(@friend), data: {turbo_method: :delete, turbo_confirm: "you sure?" }, method: :delete, class: "btn btn-danger" %>
      <% end %>
    </div>
  <div class="row">
      <!-- customer reviews -->
      <% unless @reviews.empty? %>
      <div class="col-lg-4 col-md-5 col-12 mb-4 mb-lg-0 pr-lg-6">
          <div class="mb-6">
            <h4 class="mb-3">Customer reviews</h4>
            <span class="font-14">
            <% @avg.times do %>
              <i class="fas fa-star text-warning"></i>
            <% end %>
              <% (5 - @avg).times do %>
              <i class="far fa-star text-warning"></i>
              <% end %>
            </span>
            <span class="h5"> <%= @avg %> out of 5</span>
            <p class="font-14"><%= @reviews.count %> customer ratings</p>
            <div class="row align-items-center mb-1 ">
                <div class="col-md-2 col-2 pr-0">
                  <div class="font-12 text-dark">5 Star</div>
                </div>
                <div class="col-md-8 col-8 pr-2">
                  <div class="progress" style="height: 8px;">
                      <div class="progress-bar
                        bg-warning" role="progressbar" style="width: <%= @reviews.where(rating: 5).count / @reviews.count.to_f * 100 %>%" aria-valuenow="<%= @reviews.where(rating: 5).count / @reviews.count.to_f * 100 %>" aria-valuemin="0" aria-valuemax="100"></div>
                  </div>
                </div>
                <div class="col-md-2 col-2">
                  <div class="font-12 text-primary"><%= (@reviews.where(rating: 5).count / @reviews.count.to_f * 100).to_i %>%</div>
                </div>
            </div>
            <div class="row align-items-center mb-1">
                <div class="col-md-2 col-2 pr-0">
                  <div class="font-12 text-dark">4 Star</div>
                </div>
                <div class="col-md-8 col-8 pr-2">
                  <div class="progress" style="height: 8px;">
                      <div class="progress-bar
                        bg-warning" role="progressbar" style="width:<%= (@reviews.where(rating: 4).count / @reviews.count.to_f * 100).to_i %>%" aria-valuenow="<%=  (@reviews.where(rating: 4).count / @reviews.count.to_f * 100).to_i %>" aria-valuemin="0" aria-valuemax="100"></div>
                  </div>
                </div>
                <div class="col-md-2 col-2">
                  <div class="font-12 text-primary"><%= (@reviews.where(rating: 4).count / @reviews.count.to_f * 100).to_i %>%</div>
                </div>
            </div>
            <div class="row align-items-center mb-1">
                <div class="col-md-2 col-2 pr-0">
                  <div class="font-12 text-dark">3 Star</div>
                </div>
                <div class="col-md-8 col-8 pr-2">
                  <div class="progress" style="height: 8px;">
                      <div class="progress-bar
                        bg-warning" role="progressbar" style="width:<%=(@reviews.where(rating: 3).count / @reviews.count.to_f * 100).to_i%>%" aria-valuenow="<%=(@reviews.where(rating: 3).count / @reviews.count.to_f * 100).to_i%>" aria-valuemin="0" aria-valuemax="100"></div>
                  </div>
                </div>
                <div class="col-md-2 col-2">
                  <div class="font-12 text-primary"><%=(@reviews.where(rating: 3).count / @reviews.count.to_f * 100).to_i%>%</div>
                </div>
            </div>
            <div class="row align-items-center mb-1">
                <div class="col-md-2 col-2 pr-0">
                  <div class="font-12 text-dark">2 Star</div>
                </div>
                <div class="col-md-8 col-8 pr-2">
                  <div class="progress" style="height: 8px;">
                      <div class="progress-bar
                        bg-warning" role="progressbar" style="width:<%=(@reviews.where(rating: 2).count / @reviews.count.to_f * 100).to_i%>%" aria-valuenow="<%=(@reviews.where(rating: 2).count / @reviews.count.to_f * 100).to_i%>" aria-valuemin="0" aria-valuemax="100"></div>
                  </div>
                </div>
                <div class="col-md-2 col-2">
                  <div class="font-12 text-primary"><%=(@reviews.where(rating: 2).count / @reviews.count.to_f * 100).to_i%>%</div>
                </div>
            </div>
            <div class="row align-items-center mb-2">
                <div class="col-md-2 col-2 pr-0">
                  <div class="font-12 text-dark">1 Star</div>
                </div>
                <div class="col-md-8 col-8 pr-2">
                  <div class="progress" style="height: 8px;">
                      <div class="progress-bar
                        bg-warning" role="progressbar" style="width:<%=(@reviews.where(rating: 1).count / @reviews.count.to_f * 100).to_i%>%" aria-valuenow="<%=(@reviews.where(rating: 1).count / @reviews.count.to_f * 100).to_i%>" aria-valuemin="0" aria-valuemax="100"></div>
                  </div>
                </div>
                <div class="col-md-2 col-2">
                  <div class="font-12 text-primary"><%=(@reviews.where(rating: 1).count / @reviews.count.to_f * 100).to_i%>%</div>
                </div>
            </div>
          </div>

      </div>
      <!-- customer reviews list -->
      <div class="col-lg-8 col-md-7 col-12">
          <div class="d-flex align-items-center justify-content-between mb-4">
            <div>
                <h4 class="mb-0">Ratings &amp; Reviews</h4>
            </div>

          </div>
          <% @reviews.each do |review| %>
          <div class="mb-4 pb-4 border-bottom">
            <div class="d-flex mb-3 align-items-center">
                <div class="ml-2">
                  <h5 class="mb-1">
                      <%= review.user.first_name %> <%= review.user.last_name %>
                  </h5>
                  <p class="font-12 mb-0">
                  <%# created times ago %>
                  <%= time_ago_in_words(review.created_at) %>
                  </p>
                </div>
            </div>
            <div class="mb-2">
                <span class="font-14 mr-2">
                  <% review.rating.times do %>
              <i class="fas fa-star text-warning"></i>
            <% end %>
              <% (5 - review.rating).times do %>
              <i class="far fa-star text-warning"></i>
              <% end %>
                </span>
                <span class="h5"> <%= review.title %> </span>
            </div>
            <p>
              <%= review.body %>
            </p>
            <% if policy(review).destroy? %>
        <%= link_to "Delete", review_path(review), data: {turbo_method: :delete, turbo_confirm: "you sure?" }, method: :delete, class: "btn btn-danger text-white" %>
      <% end %>
          </div>
          <% end %>
      </div>
      <% end %>
  </div>
</div>
